<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp.Views.DisguiseScreens.CalculatorDisguiseView">
    
    <Grid BackgroundColor="Black" 
          Padding="10"
          RowDefinitions="2*,*,*,*,*,*"
          RowSpacing="10">
        
        <!-- 디스플레이 -->
        <Frame Grid.Row="0" 
               BackgroundColor="#1c1c1c"
               BorderColor="Transparent"
               Padding="20"
               CornerRadius="10">
            <VerticalStackLayout Spacing="10" VerticalOptions="End">
                <Label Text="125 × 8"
                       FontSize="24"
                       TextColor="#666"
                       HorizontalTextAlignment="End"/>
                <Label Text="1,000"
                       FontSize="48"
                       FontAttributes="Bold"
                       TextColor="White"
                       HorizontalTextAlignment="End"/>
            </VerticalStackLayout>
        </Frame>

        <!-- 버튼들 -->
        <Grid Grid.Row="1"
              ColumnDefinitions="*,*,*,*"
              ColumnSpacing="10">
            <Button Text="C" BackgroundColor="#505050" TextColor="White" FontSize="24" CornerRadius="40"/>
            <Button Grid.Column="1" Text="±" BackgroundColor="#505050" TextColor="White" FontSize="24" CornerRadius="40"/>
            <Button Grid.Column="2" Text="%" BackgroundColor="#505050" TextColor="White" FontSize="24" CornerRadius="40"/>
            <Button Grid.Column="3" Text="÷" BackgroundColor="#ff9500" TextColor="White" FontSize="32" CornerRadius="40"/>
        </Grid>

        <Grid Grid.Row="2"
              ColumnDefinitions="*,*,*,*"
              ColumnSpacing="10">
            <Button Text="7" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="1" Text="8" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="2" Text="9" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="3" Text="×" BackgroundColor="#ff9500" TextColor="White" FontSize="32" CornerRadius="40"/>
        </Grid>

        <Grid Grid.Row="3"
              ColumnDefinitions="*,*,*,*"
              ColumnSpacing="10">
            <Button Text="4" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="1" Text="5" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="2" Text="6" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="3" Text="−" BackgroundColor="#ff9500" TextColor="White" FontSize="32" CornerRadius="40"/>
        </Grid>

        <Grid Grid.Row="4"
              ColumnDefinitions="*,*,*,*"
              ColumnSpacing="10">
            <Button Text="1" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="1" Text="2" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="2" Text="3" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="3" Text="+" BackgroundColor="#ff9500" TextColor="White" FontSize="32" CornerRadius="40"/>
        </Grid>

        <Grid Grid.Row="5"
              ColumnDefinitions="2*,*,*"
              ColumnSpacing="10">
            <Button Text="0" BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40" HorizontalOptions="Fill"/>
            <Button Grid.Column="1" Text="." BackgroundColor="#333" TextColor="White" FontSize="32" CornerRadius="40"/>
            <Button Grid.Column="2" Text="=" BackgroundColor="#ff9500" TextColor="White" FontSize="32" CornerRadius="40"/>
        </Grid>
        
    </Grid>
    
</ContentView>

