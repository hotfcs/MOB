<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:MauiApp.Models"
             x:Class="MauiApp.Views.DisguiseScreens.CalendarDisguiseView">
    
    <Grid BackgroundColor="White" RowDefinitions="Auto,Auto,*">
        
        <!-- 헤더 -->
        <Grid Padding="15,10"
              BackgroundColor="#4285f4"
              ColumnDefinitions="*,Auto">
            <Label Text="📅 일정"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="White"
                   VerticalOptions="Center"/>
            <Label Grid.Column="1"
                   Text="{Binding CurrentDate, StringFormat='{0:yyyy년 MM월 dd일}'}"
                   FontSize="14"
                   TextColor="White"
                   VerticalOptions="Center"/>
        </Grid>

        <!-- 날짜 선택기 -->
        <ScrollView Grid.Row="1" 
                    Orientation="Horizontal"
                    Padding="10"
                    BackgroundColor="#f8f9fa">
            <HorizontalStackLayout Spacing="10">
                <Frame Padding="15,10" 
                       BackgroundColor="#4285f4"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="월" TextColor="White" FontSize="11" HorizontalOptions="Center"/>
                        <Label Text="19" TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame Padding="15,10" 
                       BackgroundColor="White"
                       BorderColor="#e0e0e0"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="화" TextColor="#666" FontSize="11" HorizontalOptions="Center"/>
                        <Label Text="20" TextColor="#666" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame Padding="15,10" 
                       BackgroundColor="White"
                       BorderColor="#e0e0e0"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="수" TextColor="#666" FontSize="11" HorizontalOptions="Center"/>
                        <Label Text="21" TextColor="#666" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
                <Frame Padding="15,10" 
                       BackgroundColor="White"
                       BorderColor="#e0e0e0"
                       CornerRadius="10"
                       HasShadow="False">
                    <VerticalStackLayout Spacing="2">
                        <Label Text="목" TextColor="#666" FontSize="11" HorizontalOptions="Center"/>
                        <Label Text="22" TextColor="#666" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
                    </VerticalStackLayout>
                </Frame>
            </HorizontalStackLayout>
        </ScrollView>

        <!-- 일정 리스트 -->
        <ScrollView Grid.Row="2">
            <CollectionView x:Name="EventsCollection"
                            SelectionMode="None"
                            Margin="10">
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:CalendarEvent">
                        <Frame Margin="0,5"
                               Padding="15"
                               BackgroundColor="White"
                               BorderColor="#e0e0e0"
                               CornerRadius="10"
                               HasShadow="True">
                            <Grid ColumnDefinitions="Auto,*" ColumnSpacing="15">
                                
                                <!-- 시간 표시 -->
                                <BoxView WidthRequest="4"
                                         BackgroundColor="{Binding Color}"
                                         CornerRadius="2"/>
                                
                                <VerticalStackLayout Grid.Column="1" Spacing="8">
                                    <!-- 시간 -->
                                    <Label Text="{Binding TimeRange}"
                                           FontSize="13"
                                           TextColor="#666"
                                           FontAttributes="Bold"/>
                                    
                                    <!-- 제목 -->
                                    <Label Text="{Binding Title}"
                                           FontSize="17"
                                           FontAttributes="Bold"
                                           TextColor="#212121"/>
                                    
                                    <!-- 위치 -->
                                    <HorizontalStackLayout Spacing="5">
                                        <Label Text="📍" FontSize="12"/>
                                        <Label Text="{Binding Location}"
                                               FontSize="13"
                                               TextColor="#666"/>
                                    </HorizontalStackLayout>
                                    
                                    <!-- 설명 -->
                                    <Label Text="{Binding Description}"
                                           FontSize="13"
                                           TextColor="#999"
                                           LineBreakMode="WordWrap"
                                           MaxLines="2"/>
                                    
                                    <!-- 소요 시간 -->
                                    <Frame Padding="8,4"
                                           BackgroundColor="#f1f3f4"
                                           CornerRadius="4"
                                           HasShadow="False"
                                           HorizontalOptions="Start">
                                        <Label Text="{Binding Duration}"
                                               FontSize="11"
                                               TextColor="#666"/>
                                    </Frame>
                                </VerticalStackLayout>
                                
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </ScrollView>
        
    </Grid>
    
</ContentView>

